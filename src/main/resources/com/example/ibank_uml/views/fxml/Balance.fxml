<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.geometry.Pos?>

<VBox alignment="CENTER" xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml" fx:controller="com.example.ibank_uml.controllers.BalanceController" spacing="20" stylesheets="@styles.css">
    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>
    <VBox spacing="15" alignment="CENTER">
        <Label text="Account Balance" style="-fx-font-size: 22px; -fx-text-fill: #01B4F6; -fx-font-weight: bold;" />
        <Label text="Your balance is:" style="-fx-font-size: 18px; -fx-text-fill: white; -fx-font-weight: bold;" />
        <Label fx:id="balanceLabel" text="Balance: $" />
        <HBox spacing="15" alignment="CENTER">
            <Button text="Back" onAction="#handleBackToMenu"/>
        </HBox>
    </VBox>
</VBox>
